<Window x:Class="Quiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#f0f0f0" Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock x:Name="QuestionText" FontSize="18" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,15" TextAlignment="Center"/>
            <TextBox x:Name="AnswerBox" FontSize="16" Margin="0,0,0,10" Padding="5"/>
            <ProgressBar x:Name="TimerBar" Height="20" Maximum="10" Margin="0,0,0,10"/>
            <Button x:Name="SubmitButton" Content="Ответить" Click="SubmitAnswer_Click" FontSize="16" Height="35" Background="#007ACC" Foreground="White"/>
            <Button x:Name="RestartButton" Content="Начать заново" Click="RestartButton_Click" FontSize="16" Height="35" Background="#28a745" Foreground="White" Visibility="Collapsed" Margin="0,10,0,0"/>
            <TextBlock x:Name="FeedbackText" FontSize="14" Foreground="DarkRed" Margin="0,15,0,0" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
